generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

/// USER MODEL
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  isAdmin   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// PROJECT MODEL
model Project {
 id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String   @unique
  description String?
  images      String[] // <-- ADD THIS LINE
  status      String?
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


/// DONOR MODEL
model Donor {
   id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  contribution Float?
  amount       Float?     // added
  message      String?
  logo         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

